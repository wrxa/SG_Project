// 将设置放入此文件中以覆盖默认值和用户设置。
{
    "python.formatting.provider": "yapf",
    "python.linting.flake8Enabled": true
    //ctrl+shift+p  输入setting
    //在用户配置对象追加
    "files.exclude": {  
    "*.metadata": true, 
    "*.settings": true,        
    "*.pyc": true 
    "*.log": true
    "*.gitignore": true
    "LICENSE": true
    "*.md": true
    "*.vscode": true
    "*/*.pyc": true
    "*/*/*.pyc": true
    "*/*.settings": true
    "*/*.project": true
    "*/*.classpath": true
    "*/bin": true
    "*/cache.properties": true
    } 
}